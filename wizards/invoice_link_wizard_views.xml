<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_link_wizard_view_form" model="ir.ui.view">
        <field name="name">invoice.link.wizard.form</field>
        <field name="model">invoice.link.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Invoice Link">
                <group>
                    <group invisible="1">
                        <field name="res_id"/>
                        <field name="access_token"/>
                        <field name="is_already_invoiced" />
                    </group>
                </group>
                <group attrs="{'invisible':[('is_already_invoiced','=',False)]}">
                    <p class="alert alert-error font-weight-bold" role="alert">This sale is already invoiced</p>
                </group>
                <group attrs="{'invisible':[('is_already_invoiced','=',True)]}">
                    <p class="alert alert-info font-weight-bold" role="alert">Generated link for invoice current sale</p>
                </group>
                <group attrs="{'invisible':[('is_already_invoiced','=',True)]}">
                    <field name="link" readonly="1" widget="CopyClipboardChar"/>
                </group>
                <footer>
                    <button string="Close" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_invoice_from_order_generate_link" model="ir.actions.act_window">
        <field name="name">Generate a Invoice Link</field>
        <field name="res_model">invoice.link.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="invoice_link_wizard_view_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
